## Environment Variables

app:
  name: PROJECT_NAME
  env: production
  port: 3000
  log_level: info
  timezone: Asia/Riyadh
  read_timeout: 60
  write_timeout: 60
  max_retries: 3
  retry_delay: 500ms

health:
  liveness:
    verbose_log: false
    initial_checks_to_skip: 0
  readiness:
    verbose_log: true
    initial_checks_to_skip: 0
  dependencies:
    nats:
      readiness_check: true
      liveness_check: true
    database:
      readiness_check: true
      liveness_check: true
    test_client:
      readiness_check: false
      liveness_check: true

api:
  key: my-api-key
  public_routes:
    - "/api/healthz/alive"
    - "/api/healthz/ready"
    - "/api/docs"
    - "/metrics"

database:
  host: localhost
  port: 5432
  name: mydatabase
  username: myusername
  password: mypassword
  synchronize: false
  ssl: false
  migrations_dir: migrations
  driver: postgres
  migrate_table: schema_migrations

nats:
  servers: nats://localhost:4222
  client_name: PROJECT_NAME
  creds_path: secrets/PROJECT_NAME_user.creds
  default_stream_name: PROJECT_NAME
  default_stream_subjects:
    - "PROJECT_NAME.>"
  consumer:
    max_deliver: 72
    backoff_durations:
      - 30s
      - 1m
      - 5m
      - 15m
    default_backoff_duration: 1h
  monitoring:
    enabled: false
    interval: 5m
    excluded_consumers: {}
    pending_messages_threshold: 2

sentry:
  dsn: https://PROJECT_NAME@sentry.io/PROJECT_NAME
  traces_sample_rate: 1.0

open_telemetry:
  enabled: false
  excluded_routes:
    - /api/healthz/alive
    - /api/healthz/ready
    - /api/docs
    - /metrics

clients:
  max_regular_body_size_mb: 5
  timeout: 30s
  http_transport:
    dial_timeout: 30s
    dial_keep_alive: 30s
    max_idle_conns: 100
    idle_conn_timeout: 20s
    tls_handshake_timeout: 10s
    disable_keep_alive: false
  retry:
    max_retries: 3
    delay: 500ms

test_client:
  base_url: "http://whatsapp-bro.wave"
  api_key: "super-super-super-secret-key"